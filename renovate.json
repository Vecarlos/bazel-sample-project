{
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)MODULE\\.bazel$"],
      "matchStrings": [
        "\"(?<depName>[A-Za-z0-9_.-]+:[A-Za-z0-9_.-]+):(?<currentValue>[^\"\\s]+)\""
      ],
      "datasourceTemplate": "maven",
      "versioningTemplate": "maven"
    }
  ],
  "ignoreDeps": ["common-jvm"],
  "packageRules": [
    {
      "description": "Ignorar major updates para Bazel (Mantiene v7.x)",
      "matchManagers": ["bazelisk"],
      "matchPackageNames": ["bazel"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Limitar AWS a versión 5.x",
      "matchManagers": ["terraform"],
      "matchPackageNames": ["hashicorp/aws", "aws"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Limitar Helm a versión 2.x",
      "matchManagers": ["terraform"],
      "matchPackageNames": ["hashicorp/helm", "helm"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}