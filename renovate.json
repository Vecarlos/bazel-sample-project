{
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)MODULE\\.bazel$"],
      "matchStrings": [
        "\"(?<depName>[A-Za-z0-9_.-]+:[A-Za-z0-9_.-]+):(?<currentValue>[^\"\\s]+)\""
      ],
      "datasourceTemplate": "maven",
      "versioningTemplate": "maven"
    }
  ],
  "ignoreDeps": ["common-jvm"],
  "packageRules": [
    {
      "matchManagers": ["bazelisk"],
      "allowedVersions": "<8.0.0"
    },
    {
      "description": "AWS Provider y Modulos: Quedarse en v5 (Bloquear v6+)",
      "matchManagers": ["terraform"],
      "matchPackageNames": ["hashicorp/aws", "aws"],
      "matchPackagePatterns": ["^terraform-aws-modules/", ".*aws.*"],
      "allowedVersions": "<6.0.0"
    },
    {
      "description": "Helm: Quedarse en v2 (Bloquear v3+)",
      "matchManagers": ["terraform"],
      "matchPackageNames": ["hashicorp/helm", "helm"],
      "allowedVersions": "<3.0.0"
    }
  ]
}